{
    "chmod": "0755",
    "finder": [
        {
            "in": "src",
            "name": "*.php",
            "exclude": "random_compat"
        },
        {
            "in": "vendor/composer",
            "name": "*.php",
            "exclude": "other"
        },
        {
            "in": "vendor/paragonie",
            "name": "*.php",
            "exclude": "other"
        }
    ],
    "compactors": [
        "Herrera\\Box\\Compactor\\Php"
    ],
    "compression": "GZ",
    "main": "vendor/autoload.php",
    "output": "defuse-crypto.phar",
    "stub": true
}
